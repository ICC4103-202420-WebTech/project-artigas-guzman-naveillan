<div class="container">
  <div class="row">
    <h1>All Courses</h1>
  </div>
  <div class="row">
    <% @courses.each do |course| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= course.title %></h5>
            <p class="card-text"><%= course.description %></p>
            <% if user_signed_in?%>
            <% if current_user.id == course.teacher_id%>
              <%= link_to 'Edit', edit_course_path(course) , class: 'btn btn-warning'%>
              <%= link_to 'Delete', course_path(course), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } , class: 'btn btn-danger'%>
            <%end%>
            <%end%>
            <a href="<%= course_path(course) %>" class="btn btn-primary">View Course</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="row"><p> </p></div>

  <% if user_signed_in?%>
  <div class="container">
    <%= link_to '+New Course', new_course_path, class: 'btn btn-primary' %>
  </div>
  <%end%>

</div>
