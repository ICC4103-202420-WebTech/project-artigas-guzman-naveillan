<div class="container">
  <div class="row">
    <h1>All Courses</h1>
  </div>
  <div class="row">
    <% @courses.each do |course| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= course.title %></h5>
            <p class="card-text"><%= course.description %></p>
            <a href="<%= course_path(course) %>" class="btn btn-primary">View Course</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
